<%= content_for(:title,  '风控预警 | TopTrader') %>
<section class="content-header">
  <h1>
    风控预警 <small>信息预览</small>
  </h1>
  <ol class="breadcrumb">
    <li><a href="#"><i class="fa fa-dashboard"></i> Dashboard</a></li>
    <li class="active"><i class="fa fa-exchange"></i> 风控预警</li>
  </ol>
</section>
<section class="content">
  <div class="box box-primary">
    <div class="box-header">
      <a href="<%= new_backend_risk_coercion_path %>" class="btn bg-primary btn-flat"><i class="ion-plus"></i> 添加预警</a>
    </div>
    <div class="box-body">
      <div class="row">
        <div class="col-sm-12">
          <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
            <thead>
              <tr>
                <th tabindex="0" aria-controls="example1" style="text-align: center">Daily</th>
                <th tabindex="0" aria-controls="example1" style="text-align: center">Week</th>
                <th tabindex="0" aria-controls="example1" style="text-align: center">Daily Ratio</th>
                <th tabindex="0" aria-controls="example1" style="text-align: center">Week Ratio</th>
                <th tabindex="0" aria-controls="example1" style="text-align: center;width: 160px">操作</th>
              </tr>
            </thead>
            <tbody>
            <% if @risk %>
              <tr style="text-align: center">
                <td><br>
                  <label class="btn bg-black btn-flat" style="font-size: 16px">
                    <%= @risk.daily_loss %>
                  </label>
                </td>
                <td><br>
                  <label class="btn bg-black btn-flat" style="font-size: 16px;min-width: 100px">
                    <%= @risk.week_loss %>
                  </label>
                </td>
                <td><br>
                  <label class="btn bg-black btn-flat" style="font-size: 16px;min-width: 100px">
                    <%= @risk.daily_ratio %>
                  </label>
                </td>
                <td><br>
                  <label class="btn bg-black btn-flat" style="font-size: 16px;min-width: 100px">
                    <%= @risk.week_ratio %>
                  </label>
                </td>
                <td style="text-align: center;">
                  <a href="<%= edit_backend_risk_coercion_path(@risk) %>" class="btn bg-orange btn-flat">
                    <i class="glyphicon glyphicon-edit"></i>
                  </a>
                  <a href="<%= backend_risk_coercion_path(@risk) %>" class="btn bg-red btn-flat" data-method="delete" data-confirm="确定删除吗？">
                    <i class="glyphicon glyphicon-trash"></i>
                  </a>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>