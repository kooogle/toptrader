<section class="sidebar">
  <div class="user-panel">
    <div class="pull-left image">
      <img src="<%= image_path('favicon.png')%>" class="img-circle" alt="User Image">
    </div>
    <div class="pull-left info">
      <p><%= current_user.email.split('@')[0] %></p>
      <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
    </div>
  </div>
  <form action="#" method="get" class="sidebar-form">
    <div class="input-group">
      <input type="text" name="q" class="form-control" placeholder="Search...">
      <span class="input-group-btn">
        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i>
        </button>
      </span>
    </div>
  </form>
  <ul class="sidebar-menu">
    <li class="header">菜单导航</li>
    <li class="treeview <%= 'active' if controller_name == 'users' %>">
      <a href="<%= backend_root_path %>" target="_self">
        <i class="fa fa-dashboard"></i> <span> Dashboard</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'api_tokens' %>">
      <a href="<%= backend_api_tokens_path %>" target="_self">
        <i class="fa fa-key"></i> <span> 认证秘钥</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'markets' %>">
      <a href="<%= backend_markets_path %>" target="_self">
        <i class="fa fa-exchange"></i> <span> 交易市场</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'position_cycles' %>">
      <a href="<%= backend_position_cycles_path %>" target="_self">
        <i class="fa fa-calendar"></i> <span> 持仓周期</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'balances' %>">
      <a href="<%= backend_balances_path %>" target="_self">
        <i class="fa fa-google-wallet"></i> <span> 账户钱包</span>
      </a>
    </li>
    <li class="treeview <%= 'active' if controller_name == 'risk_coercions' %>">
      <a href="<%= backend_risk_coercions_path %>" target="_self">
        <i class="fa fa-bell"></i> <span> 风控预警</span>
      </a>
    </li>
    <li class="header">设置管理</li>
    <li class="treeview <%= 'active' if controller_name == 'dashboard' && action_name == 'daemon' %>">
      <a href="<%= backend_daemons_path %>" target="_self">
        <i class="fa fa-assistive-listening-systems"></i> <span> 任务进程</span>
      </a>
    </li>
  </ul>
</section>